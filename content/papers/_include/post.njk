---
layout: base.njk
pagination: false
---
<article>
  <h1>{{ title }}</h1>
  {% if date %}<p class="meta">{{ date | date("yyyy-MM-dd") }}</p>{% endif %}

  {% if memes or themes %}
  <p>
    {% for m in memes or [] %}<a class="chip" href="/meme/{{ m }}/">{{ m }}</a> {% endfor %}
    {% for t in themes or [] %}<a class="chip chip--theme" href="/theme/{{ t }}/">{{ t }}</a> {% endfor %}
  </p>
  {% endif %}

  <div class="prose">
    {{ content | safe }}
  </div>
</article>
